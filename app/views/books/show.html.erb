<div class="container">
    <div class="row">
        <p><%= notice %></p>
        <%= render 'users/left_line', user:@user,post_book:@post_book %>
        <div class="col-xs-9">
            <h2>Book detail</h2>
            <table class="table">
                <tr>
                    <td>
                        <%= link_to user_path(@user.id) do %> 
                            <%= attachment_image_tag @user, :profile_image,size: "40x40", format: 'jpeg', class: "profile-img", fallback: "no_image.jpg" %>
                            <br>
                            <%= @user.name %>
                        <% end %>
                    </td>
                    <td><%= link_to "#{@book.title}",book_path(@book.id) %></td> 
                    <td><%= @book.body %></td>
                     <% if user_signed_in? && @user == current_user %>
                    <td><%= link_to "Edit", edit_book_path(@book.id),class:"btn-sm btn-success" %></td>
                    <td><%= link_to "Destroy", book_path(@book.id), method: :delete,  "data-confirm" => "本当に消しますか?",class:"btn-sm btn-danger" %></td>
                    <% end %>
                </tr>
            </table>
        </div>
    </div>
</div>
