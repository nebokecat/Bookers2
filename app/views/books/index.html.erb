<div class="container">
    <div class="row">
        <%= render 'users/left_line', user:@user,post_book:@post_book %>
        <div class="col-xs-9">
            <h1>Books</h1>
            <table class="table">
                <thead>
                    <tr>
                        <th></th>
                        <th>Title</th>
                        <th>Opinion</th>
                    </tr>
                </thead>
                <tbody>
                    <% @books.each do |book| %>
                    <tr>
                        <td>
                            <%= link_to user_path(book.user_id) do %> 
                                <%= attachment_image_tag @user, :profile_image,size: "40x40", format: 'jpeg', class: "profile-img", fallback: "no_image.jpg" %>
                            <% end %>
                        </td>
                        <td><%= link_to book.title,book_path(book.id) %></td> 
                        <td><%= book.body %></td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>
