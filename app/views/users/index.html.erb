<div class="container">
    <div class="row">
        <%= render 'users/left_line', user:@user,post_book:@post_book %>
        <div class="col-xs-9">
            <h1>Users</h1>
            <table class="table">
                <thead>
                    <tr>
                        <th>image</th>
                        <th>name</th>
                        <th colspan="3"></th>
                    </tr>
                </thead>
                <tbody>
                    <% @users.each do |user| %>
                    <tr>
                        <td><%= attachment_image_tag user, :profile_image,size: "60x60", format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg" %></td>
                        <td><%= user.name %></td> 
                        <td><%= link_to "Show",user_path(user.id) %></td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>
