<div class="container">
    <h2>User info</h2>
    <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this book from being saved:</h2>
    
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <%= form_for(@user) do |f| %>
    <div class="field">
        <label>Name</label>
        <%= f.text_field :name, autofocus: true %>
    </div>
    <div class="field">
      <label>Image</label>
      <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
    </div>
    <div class="field">
      <label>Introduction</label>
      <%= f.text_area :introduction, autofocus: true %>
    </div>
      <%= f.submit "Update User" %>
    <% end %>
</div>