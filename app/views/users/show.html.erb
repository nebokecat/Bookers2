<div class="container">
    <div class="row">
        <p class="notice"><%= notice %></p>
        <%= render 'users/left_line', user:@user,post_book:@post_book %>
        
        <div class="col-xs-9">
            <h2>Books</h2>
            <table class="table table-inverse">
                <thead>
                    <tr>
                        <th></th>
                        <th>Title</th>
                        <th>opinion</th>
                        <th colspan="3"></th>
                    </tr>
                </thead>
                <tbody>
                    <% @post_books.each do |book| %>
                    <tr>
                        <td><%= attachment_image_tag User.find(book.user_id), :profile_image,size: "60x60", format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg" %></td>
                        <td><%= link_to book.title,book_path(book.id) %></td> 
                        <td><%= book.body %></td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>